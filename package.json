{
  "name": "blaze-vue",
  "version": "3.5.0",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint && vue-cli-service lint docs",
    "build:docs": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name blaze-vue src/blaze-plugin.js",
    "lint:css": "stylelint 'src/**/*.vue' && stylelint 'docs/**/*.vue'",
    "prepublishOnly": "npm run build:lib && sh .post-build-copy.sh",
    "test:unit": "vue-cli-service test:unit"
  },
  "main": "dist/blaze-vue.common.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-unit-jest": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "chai": "^4.1.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "lodash.orderby": "^4.6.0",
    "material-design-icons-iconfont": "^4.0.4",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.0.3",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.2.0",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.16",
    "vue-test-utils-helpers": "https://github.com/AmpleOrganics/vue-test-utils-helpers.git"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "vue-cli-service lint docs",
      "git add"
    ]
  }
}
