{
  "name": "blaze-vue",
  "version": "0.1.2",
  "private": false,
  "main": "dist/blaze-vue.common.js",
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build:demo": "vue-cli-service build",
    "test": "vue-cli-service test",
    "lint": "vue-cli-service lint",
    "build:lib": "vue-cli-service build --target lib --name blaze-vue src/blaze-plugin.js",
    "prepublishOnly": "npm run build:lib && sh .post-build-copy.sh"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-plugin-unit-mocha": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "@vue/eslint-config-standard": "^3.0.0-beta.6",
    "@vue/test-utils": "^1.0.0-beta.14",
    "chai": "^4.1.2",
    "lodash.orderby": "^4.6.0",
    "node-sass": "^4.8.3",
    "sass-loader": "^6.0.7",
    "sass-resources-loader": "^1.3.3",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.16"
  },
  "peerDependencies": {
    "vue": "^2.5.0"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/strongly-recommended",
      "@vue/standard"
    ],
    "rules": {
      "generator-star-spacing": "off",
      "vue/max-attributes-per-line": [
        2,
        {
          "singleline": 2,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
